{
  "name": "hugo-sassify-theme",
  "version": "1.0.0",
  "description": "A modern Hugo theme for SaaS websites",
  "author": "Chaoming Li",
  "license": "MIT",
  "scripts": {
    "start": "concurrently \"npx tailwindcss -i assets/css/main.css -o static/css/style.css --watch\" \"hugo server -D\"",
    "build": "tailwindcss -i assets/css/main.css -o static/css/style.css --minify && hugo --minify"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.10",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0"
  }
}
